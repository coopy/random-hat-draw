{
  "name": "hat-draw",
  "version": "0.0.1",
  "description": "Draw a random thing from a hat full of things",
  "main": "hat.js",
  "scripts": {
    "build": "NODE_ENV=production npm run clean && npm i && webpack --config webpack.config.build.js --production",
    "clean": "mkdir -p build && rm -rf build/*",
    "dev": "webpack-dev-server --watch --inline",
    "server-dev": "nodemon server.js",
    "server-prod": "forever server.js",
    "lint": "eslint *.js src/js",
    "start": "npm run build && npm run server-prod",
    "test": "npm run lint"
  },
  "author": "Per Nilsson <per@sproutlab.com>",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.2.3",
    "babel": "^6.3.26",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "bunyan": "^1.5.1",
    "css-loader": "^0.23.1",
    "forever": "^0.15.1",
    "good": "^6.4.0",
    "good-bunyan": "^0.1.2",
    "good-console": "^5.3.0",
    "hapi": "^12.1.0",
    "native-promise-only": "^0.8.1",
    "postcss-import": "^7.1.3",
    "postcss-loader": "^0.8.0",
    "precss": "^1.4.0",
    "radium": "^0.16.2",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-ladda": "^4.0.0",
    "react-modal": "^0.6.1",
    "style-loader": "^0.13.0",
    "suitcss-base": "^1.0.1",
    "suitcss-components-arrange": "^1.1.0",
    "suitcss-components-grid": "^3.0.1",
    "webpack": "^1.12.12"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "eslint": "^1.10.3",
    "eslint-config-defaults": "^8.0.2",
    "eslint-plugin-react": "^3.16.0",
    "nodemon": "^1.8.1",
    "webpack-dev-server": "^1.14.0"
  }
}
